# ===================================
# CONFIGURATION ENVIRONNEMENT - PGI AUTOMOBILE
# ===================================
#
# INSTRUCTIONS :
# 1. Copier ce fichier : cp .env.example .env
# 2. Remplir les valeurs ci-dessous
# 3. Ne JAMAIS commit le fichier .env
#
# ===================================

# Base de données
DB_HOST=localhost
DB_NAME=pgi_automobile
DB_USER=root
DB_PASS=

# Application
APP_NAME="PGI Automobile"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/PGI-Automobile

# Session
SESSION_LIFETIME=7200

# Email (optionnel - pour notifications futures)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@pgi-auto.com

# Sécurité
SECURITY_SALT=changez_cette_valeur_aleatoire_en_production

# Uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif
